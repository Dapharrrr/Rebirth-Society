generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  firstName String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  carts     Cart[]
  purchases Purchase[]
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String
  duration    Int
  link        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  packId      String
  pack        Pack     @relation(fields: [packId], references: [id])
}

model Pack {
  id          String   @id @default(cuid())
  image       String   @unique
  name        String
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  carts       Cart[]
  videos      Video[]
  purchases   Purchase[]
}

model Cart {
  id         String   @id @default(cuid())
  totalPrice Float    @default(0)
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  packId     String
  pack       Pack     @relation(fields: [packId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Purchase {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  packId          String
  pack            Pack     @relation(fields: [packId], references: [id])
  amount          Int
  currency        String
  stripeSessionId String   @unique
  createdAt       DateTime @default(now())
}